@model IEnumerable<AppManager.Models.ItemModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ItemID">Edytuj</a> |
                <a asp-area="" asp-controller="Activity" asp-action="Index">Zadania</a> |
                <a asp-action="Delete" asp-route-id="@item.ItemID">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
